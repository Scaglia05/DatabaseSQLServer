@model ImoveisApi.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Cliente</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Cadastrar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Primeira linha com dois campos -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="form-control" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda linha com dois campos -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Endereco" class="control-label"></label>
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DataNascimento" class="control-label"></label>
                        <input asp-for="DataNascimento" class="form-control" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>

                <!-- Terceira linha com um campo sozinho -->
                <div class="form-row" style="gap 10px;">
                    <div class="form-group col-md-6">
                        <label asp-for="Email_Cliente" class="control-label"></label>
                        <input asp-for="Email_Cliente" class="form-control" />
                        <span asp-validation-for="Email_Cliente" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botão de submissão -->
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Retornar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
